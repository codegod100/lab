            drop-shadow-offset-x: 0px;
            drop-shadow-offset-y: 1px;
            drop-shadow-blur: 4px;
            drop-shadow-color: #00000020;

            Text {
                x: 12px;
                y: 8px;
                text: "Pet Controls";
                font-weight: 700;
                color: #4a3c8c;
                font-size: 16px;
            }
            vertical-stretch: 0;

            VerticalLayout {
                padding-left: 16px;
                padding-right: 16px;
                padding-top: 36px;
                padding-bottom: 16px;
                spacing: 16px;

                HorizontalLayout {
                    spacing: 8px;
                    Text { text: "Name:"; vertical-alignment: center; font-weight: 600; color: #222222; }
                    StyledInput {
                        text <=> pet-name;
                        placeholder-text: "Enter pet name";
                        width: 200px;
                    }
                }

                HorizontalLayout {
                    spacing: 8px;
                    Text { text: "Happiness:"; vertical-alignment: center; font-weight: 600; color: #222222; }
                    Slider {
                        value <=> happiness;
                        minimum: 0;
                        maximum: 100;
                    }
                    Text { text: happiness + "%"; vertical-alignment: center; font-weight: 600; color: #222222; }
