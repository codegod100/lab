            color: #4a3c8c;
        }

        // Pet display area
        Rectangle {
            height: 180px;
            border-radius: 16px;
            background: #ffffff;
            drop-shadow-offset-x: 0px;
            drop-shadow-offset-y: 2px;
            drop-shadow-blur: 6px;
            drop-shadow-color: #00000020;

            VerticalLayout {
                padding: 16px;
                spacing: 12px;
                alignment: center;

                HorizontalLayout {
                    alignment: center;

                    // Container for animation
                    Rectangle {
                        width: 120px;
                        height: 120px;
                        background: transparent;

                        // Pet face (simple circle with eyes)
                        Rectangle {
                            width: 120px;
                            height: 120px;
