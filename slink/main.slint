        }

        // About section
        HorizontalLayout {
            alignment: center;
            Text {
                text: "Made with ";
                color: #222222;
                vertical-alignment: center;
            }
            Text {
                text: "â™¥";
                color: #ff6b6b;
                font-size: 18px;
                vertical-alignment: center;
            }
            Text {
                text: " using Slint";
                color: #222222;
                vertical-alignment: center;
            }
        }
    }
}
