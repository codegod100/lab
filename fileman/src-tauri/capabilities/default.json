{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "opener:allow-open-url",
      "allow": [{ "url": "*" }]
    },
    "opener:allow-reveal-item-in-dir",
    "clipboard:read-all",
    "clipboard:write-all",
    "shell:allow-open",
    "shell:default"
  ]
}
